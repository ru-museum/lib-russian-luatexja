{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Footnote": {
		"prefix": "footnote",
		"body": [
			"\\footnote{$1}"
		],
		"description": "Insart Footnote"
	},

	"Section": {
		"prefix": "section",
		"body": [
			"\\section{$1}"
		],
		"description": "Insart Section"
	},
	"SubSection": {
		"prefix": "subsection",
		"body": [
			"\\subsection{$1}"
		],
		"description": "Insart SubSection"
	},
	"SubSubSection": {
		"prefix": "subsubsection",
		"body": [
			"\\subsubsection{$1}"
		],
		"description": "Insart SubSubSection"
	},
	"Hspace": {
		"prefix": "hspace",
		"body": [
			"\\hspace{$1pt}"
		],
		"description": "Insart Hspace"
	},
	"Vspace": {
		"prefix": "vspace",
		"body": [
			"\\vspace{$1mm}"
		],
		"description": "Insart Vspace"
	},
	"Fontsize": {
		"prefix": "fontsize",
		"body": [
			"{\\fs{$1pt} }"
		],
		"description": "Insart Fontsize"
	},

	/**
	 * 詳しくは以下を参照して下さい： 
	 * Snippets in Visual Studio Code
	 * https://code.visualstudio.com/docs/editing/userdefinedsnippets
	 */
	"Valiables List": {
		"prefix": "valiablelist",
		"body": [
 			"○ VARIABLES FOR EDITTING", 
 			"$1Variables\t\t\t\t\t表記内容",
			"-------------------------------------------------------------------------------------------------------",
			"TM_SELECTED_TEXT\tThe currently selected text or the empty string",
			"TM_CURRENT_LINE\t\tThe contents of the current line",
			"TM_CURRENT_WORD\t\tThe contents of the word under cursor or the empty string",
			"TM_LINE_INDEX\t\t\tThe zero-index based line number",
			"TM_LINE_NUMBER\t\tThe one-index based line number",
			"TM_FILENAME\t\t\t\tThe filename of the current document",
			"TM_FILENAME_BASE\tThe filename of the current document without its extensions",
			"TM_DIRECTORY\t\t\tThe directory of the current document",
			"TM_FILEPATH\t\t\t\tThe full file path of the current document",
			"RELATIVE_FILEPATH\tThe relative (to the opened workspace or folder) file path of the current document",
			"CLIPBOARD\t\t\t\t\tThe contents of your clipboard",
			"WORKSPACE_NAME\t\tThe name of the opened workspace or folder",
			"WORKSPACE_FOLDER\tThe path of the opened workspace or folder",
			"CURSOR_INDEX\t\t\tThe zero-index based cursor number",
			"CURSOR_NUMBER\t\t\tThe one-index based cursor number\n",

 			"○ VARIABLES FOR DATETIME", 
			"表記\t\t\t\tVariables\t\t\t\t\t\t\t\t\t表記内容",
			"-------------------------------------------------------------------------------------------------------",
			"$CURRENT_YEAR\t\t\t\tCURRENT_YEAR\t\t\t\t\t\t\tcurrent year",
			"$CURRENT_YEAR_SHORT\t\t\t\t\tCURRENT_YEAR_SHORT\t\t\t\tcurrent year's last two digits",
			"$CURRENT_MONTH\t\t\t\t\tCURRENT_MONTH\t\t\t\t\t\t\tmonth as two digits (example '02')",
			"$CURRENT_MONTH_NAME\t\t\t CURRENT_MONTH_NAME\t\t\t\tfull name of the month (example 'July')",
			"$CURRENT_MONTH_NAME_SHORT\t\t\t CURRENT_MONTH_NAME_SHORT\tshort name of the month (example 'Jul')",
			"$CURRENT_DATE\t\t\t\t\tCURRENT_DATE\t\t\t\t\t\t\tday of the month as two digits (example '08')",
			"$CURRENT_DAY_NAME\t\t\tCURRENT_DAY_NAME\t\t\t\t\tname of day (example 'Monday')",
			"$CURRENT_DAY_NAME_SHORT\t\t\t\t\tCURRENT_DAY_NAME_SHORT\t\tshort name of the day (example 'Mon')",
			"$CURRENT_HOUR\t\t\t\t\tCURRENT_HOUR\t\t\t\t\t\t\tcurrent hour in 24-hour clock format",
			"$CURRENT_MINUTE\t\t\t\t\tCURRENT_MINUTE\t\t\t\t\t\tcurrent minute as two digits",
			"$CURRENT_SECOND\t\t\t\t\tCURRENT_SECOND\t\t\t\t\t\tcurrent second as two digits",
			"$CURRENT_SECONDS_UNIX\tCURRENT_SECONDS_UNIX\t\t\tnumber of seconds since the Unix epoch",
			"$CURRENT_TIMEZONE_OFFSET\t\t\tCURRENT_TIMEZONE_OFFSET\t\tcurrent UTC time zone offset as +HH:MM or -HH:MM (example -07:00)",
			"※ VSCodiumを日本語表示にしていると日本語での表記となります。\n",

 			"○ その他のVARIABLES", 
			"Variables\t\t\t\t\t\t表記内容",
			"-------------------------------------------------------------------------------------------------------",
			"RANDOM\t\t\t\t\t\t\t6 random Base-10 digits",
			"RANDOM_HEX\t\t\t\t\t6 random Base-16 digits",
			"UUID\t\t\t\t\t\t\t\tA Version 4 UUID",
			"BLOCK_COMMENT_START\tExample output: in PHP /* or in HTML <!--",
			"BLOCK_COMMENT_END\t\tExample output: in PHP */ or in HTML -->",
			"LINE_COMMENT\t\t\t\tExample output: in PHP //",
	],
		"description": "Valiables List"
	},

	"Date": {
		"prefix": "date",
		"body": [
			// 2025年 11月  1日 土曜日 07:41:20 JST
			"$CURRENT_YEAR年$CURRENT_MONTH月$CURRENT_DATE日($CURRENT_DAY_NAME_SHORT) $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND JST"
		],
		"description": "Insart Time: TEST"
	},
	"Bfseries": {
		"prefix": "bfseries",
		"body": [
			"{\\bfseries $1}"
		],
		"description": "Insart Bfseries"
	},
	"Itemize": {
		"prefix": "itemize",
		"body": [
			"\\begin{itemize}",
			"  \\item $1",
			"  \\item ",
			"\\end{itemize}",
		],
		"description": "Insart Itemize List"
	},

	"ItemEmp": {
		"prefix": "item[]",
		"body": [
			"\t\\item[] $1",
		],
		"description": "Insart Item Empty"
	},

	"Enumerate": {
		"prefix": "enumerate",
		"body": [
			"\\begin{enumerate}",
			"  \\item $1",
			"  \\item ",
			"\\end{enumerate}",
		],
		"description": "Insart Enumerate List"
	},

"Newpage": {
		"prefix": "newpage",
		"body": [
			"\\newpage",
		],
		"description": "Insart Newpage"
	},


"Usepackage": {
		"prefix": "usepackage",
		"body": [
			"\\usepackage{$1}",
		],
		"description": "Insart Usepackage"
	},


	"Verbatim": {
		"prefix": "verbatim",
		"body": [
			"\\begin{verbatim}",
			"$1",
			"\\end{verbatim}",
		],
		"description": "Insart Verbatim"
	},

	"Tabular": {
		"prefix": "tabular",
		"body": [
			"\\begingroup",
			"\\setlength{\\parindent}{22pt} % margin-left",
			"\\setlength{\\tabcolsep}{10pt} % cell-padding: Default 6pt",
			"\\renewcommand{\\arraystretch}{1} % Default value:",
			"% \\begin{center}",
			"\\begin{tabular}{|l|l|}",
			"  \\hline",
			"  {\\bfseries Val1} & {\\bfseries Val2}\\\\\\",
			"  \\hline",
			"  $1AA & BB\\\\\\",
			"  \\hline",
			"\\end{tabular}",
			"% \\end{center}",
			"\\endgroup"
		],
		"description": "Insart Tabular"
	},
	"NewDocument": {
		"prefix": "newdocument",
		"body": [
			"\\documentclass[a4paper,10pt,titlepage]{ltjsarticle}\n",
			"% LINK",
			"\\usepackage{url}",
			"\\usepackage{hyperref}",
			"\\hypersetup{pdfborder={0 0 0.5}}\n",
			"% 色の使用",
			"\\usepackage{xcolor}",
			"\\definecolor{mylinkcolor}{RGB}{3, 112, 145} %{65, 145, 3} % 色定義",
			"\\definecolor{linkcol}{RGB}{2, 106, 77} %{65, 145, 3} % 色定義",
			"\\hypersetup{",
			"    colorlinks=true,",
			"    citecolor=blue,",
			"    linkcolor=linkcol,",
			"    urlcolor=mylinkcolor, % 定義された色",
			"    % pdfborder={0 0 0.5}",
			"}",
			"% HTML(#800000)色定義",
			"\\def\\colH#1{\\color[HTML]{#1}}",
			"\\def\\colsecsion#1{\\color[HTML]{1DA726}#1}\n",
			"% 画像挿入",
			"\\usepackage{float}",
			"\\usepackage{graphicx}",
			"\\usepackage{svg}\n",
			"% FONT ",
			"\\usepackage{luatexja-otf}% UTF CID",
			"\\usepackage[deluxe]{luatexja-preset}",
			"\\usepackage{luatexja-fontspec}\n",
			"% FONT-SIZE",
			"\\def\\fs#1{\\fontsize{#1}{#1}\\selectfont }",
			"\\title{\\LaTeX{}文書作成Template\\vspace{140mm}}",
			"\\author{author-name}",
			"\\date{\today}\n",
			"\\begin{document}\n",
			"\\maketitle\n",
			"\\thispagestyle{empty}",
			"\\clearpage",
			"\\addtocounter{page}{-1}",
			"\\clearpage",
			"\\thispagestyle{empty}",
			"\\tableofcontents",
			"%\\textcolor{mylinkcolor}{\\tableofcontents}\n",
			"\\newpage",
			"$0",
			"\\section{SECTION: 1}\n",
			"\\section{SECTION: 2}\n",
			"\\section{SECTION: 3}\n",
			"\\end{document}"
		],
		"description": "Document 新規作成"
	},
	"BuildScript": {
		"prefix": "buildscript",
		"body": [
			"#!/bin/sh\n",

			"### ",
			"# LUALATEX BUILD 処理スクリプト",
			"#  lualatex-build.sh *.tex",
			"## \n",

			"FILENAME=\"\\$1\" # 引数から実行ファイル取得",
			"LUA_CMD=\"lualatex -shell-escape\"\n",

			"# 生成されるファイル",
			"FILE_PDF=\"`basename \"\\$FILENAME\" .tex`.pdf\"",
			"FILE_BCF=\"`basename \"\\$FILENAME\" .tex`.bcf\"\n",

			"# LUALATEX の実行",
			"if [ -e \\$1 ]; then\n",

			"  echo \"\\n=====\" \\$1 \"の処理を開始します：\"",
			"  \\$LUA_CMD \\$FILENAME",
			"  echo \"処理は正常に終了しました。PDFファイルが開かれます：\\n\"\n",

			"else\n",

			"  echo \"----------------------------------------\" ",
			"  echo \" ファイル名エラー：[\" \\$1 \"]\" ",
			"  echo \"  処理に失敗しました。\" ",
			"  echo \"  ⇒ ファイルが存在するかを確認して下さい。\" ",
			"  echo \"----------------------------------------\\n\" ",
			"  return\n",

			"fi\n",

			"# BIBER .BCF が存在する場合：",
			"if [ -e \\$FILE_BCF ]; then\n",

			"   echo \"BCF File のコンパイルを開始します ------\"",
			"   biber \\$FILE_BCF",
			"   echo \"BCF File のコンパイルを終了しました ------\"\n",

			"   echo \"処理を反映させる為、再度のコンパイルを行います ------\"",
			"   \\$LUA_CMD \\$FILENAME",
			"   echo \"処理は反映されました ------\"\n",

			"fi\n",

			"# PDF の表示は VSCodium: task command で行うことも出来ます",
			"if [ -e \\$FILE_PDF ]; then",
			"   atril \\$FILE_PDF ",
			"   echo \"\\$FILE_PDF を開きました\"",
			"fi\n",

			"exit 0",
	
		],
		"description": "BuildScript 新規作成"
	}


}
